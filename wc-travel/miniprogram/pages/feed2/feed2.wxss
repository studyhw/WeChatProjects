.container {  
  display: flex;  
  flex-direction: column;  
  justify-content: center;
  padding: 20rpx;  
}  
  
.input-area {  
  margin-bottom: 25rpx;  
}  
  
.feedback-list {  
  flex: 1;  
  padding: 10rpx;  
  border-top: 1px solid #ccc;  
}  
  
.feedback-item {  
  padding: 10rpx;  
  border-bottom: 1px solid #eee;  
  margin-bottom: 10rpx;  
}  
  
textarea {  
  width: 95%;  
  height: 100px;
  padding: 10rpx;  
margin: 8rpx;
  border: 1px solid #ccc;  
  border-radius: 5px;
  margin-bottom: 15px;
}  
  
button {  
  margin-top: 16px;  
  padding: 10rpx 20rpx;  
  margin:0 105px;
  background-color: red;  
  font-size: 12px;
  color: #fff;  
  border-radius: 4rpx;  
}