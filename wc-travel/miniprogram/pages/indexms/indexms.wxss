/* item图片 */
.list_item_pic{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}
 
/* item文本 */
.item_conn_des{
  color: #ffffff;
  font-size: 26rpx;
  width: 240rpx;
  font-weight: bolder;
  position: relative;
  bottom: 70rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  align-items: flex-start;
  display: -webkit-box;
  overflow: hidden;
}
