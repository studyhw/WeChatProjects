/* pages/login/login.wxss */
.root {
  width: 100%;
  height: 1180rpx;
  background-color: rgb(245, 245, 245);
}

/* 顶部 */
.top {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-img {
  width: 280rpx;
  height: 280rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

/* 选择 */
.item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: white;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  padding-left: 40rpx;
  font-size: 33rpx;
}


.item input {
  width: 400rpx;
  height: 80rpx;
  margin-left: 20rpx;
  bottom: 25rpx;
  font-size: 30rpx;
}

.submit {
  background: #2E8B57;
  color: white;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 500rpx;
}



.zhuce {
  text-align: center;
  color: red;
  font-size: 35rpx;
}

.admin {
  text-align: center;
  color: gray;
  font-size: 30rpx;
  margin-top: 30rpx;
}